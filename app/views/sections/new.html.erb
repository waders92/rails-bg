  <div class="container sections top-buffer">
    <h5>Add Post Section for <%= @post.title %></h5>
    <%= simple_form_for @section, url: post_sections_path(@post) do |f| %>
    <div class="new-section">
      <p><%= f.input :title %></p>
      <p><%= f.input :content %></p>
      <p><%= f.input :gist %></p>
    </div>
    <div class="submit-section">
      <%= f.submit "Add a Section", class: 'btn btn-outline-primary' %>
    </div>
    <% end %>
  </div>