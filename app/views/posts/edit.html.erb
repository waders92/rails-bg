<div class="container top-buffer">
  <div>
    <h5>Edit Post!</h5>
    <%= simple_form_for @post do |f| %> <%= f.error_notification %>
    <div class="row">
      <div class="col-md-12">
        <p>
          <%= f.input :title, required: true %>
        </p>
        <p>
          <%= f.label :topic %><br />
          <%= f.select :topic, ['Angular', 'Rails', 'JavaScript', 'MongoDB', 'ExpressJS', 'NodeJS'] %>
        </p>
        <p>
          <%= f.input :image %>
        </p>
        <p>
          <%= f.check_box :isPublishable, checked_value: true, unchecked_value: false %>
          <span class="label-text">Do you want to publish this post?</span>
        </p>
      </div>
    </div>
    <br />
    <%= f.submit 'Update Post', class: 'btn btn-primary submit' %>
    <% end %>
  </div>
  <div class="sections">
    <%= simple_form_for @section, url: post_sections_path(@post) do |f| %>
    <div class="new-section">
      <p><%= f.input :title %></p>
      <p><%= f.input :content %></p>
      <p><%= f.input :gist %></p>
    </div>
    <div class="submit-section">
      <%= f.submit "Add a Section", class: 'btn btn-primary active' %>
    </div>
    <% end %>
  </div>
</div>
