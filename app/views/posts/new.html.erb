<div class="container top-buffer">
  <div>
    <h5>New Post!</h5>
    <%= simple_form_for @post do |f| %> <%= f.error_notification %>
    <div class="row">
      <div class="col-md-12">
        <p>
          <%= f.input :title, required: true %>
        </p>
        <p>
          <%= f.label :topic %><br />
          <%= f.select :topic, @post.post_topics %>
        </p>
        <p>
          <%= f.input :image %>
        </p>
        <p>
          <%= f.check_box :isPublishable, checked_value: true, unchecked_value:
          false %>
          <span class="label-text">Do you want to publish this post?</span>
        </p>
      </div>
    </div>
    <br />
    <%= f.submit 'Create', class: 'btn btn-outline-primary' %> <% end %>
  </div>
</div>
