<div class="container top-buffer">
  <div class="new-post">
    <h5>Admins Page</h5>
    <%= link_to 'Add New Post', new_post_path ,class: 'btn btn-outline-primary btn-sm' %>
  </div>
  <div class="posts top-buffer">
    <% @posts.each do |post| %>
      <div class="top-buffer">
        <p><%= post.title %></p>
        <%= link_to 'Edit Post', edit_post_path(post), class: 'btn btn-sm btn-outline-primary' %>
        <%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-outline-danger btn-sm' %>
      </div>
    <% end %>
  </div>
</div>
