<div class="container top-buffer">
  <div class="new-post">
    <h1 class="title">Admins Page</h1>
    <%= link_to 'Add New Post', new_post_path ,class: 'btn btn-outline-primary btn-md post-new-btn' %>
  </div>
  <div class="posts top-buffer">
    <% @posts.each_with_index do |post, index| %>
      <div class="top-buffer">
        <p>Post (<%= index + 1 %>) - <%= post.title %></p>
        <%= link_to 'Edit Post', edit_post_path(post), class: 'btn btn-md btn-outline-primary' %>
        <%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-outline-danger btn-md' %>
      </div>
    <% end %>
  </div>
</div>
